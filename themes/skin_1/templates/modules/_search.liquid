<div id="search">
	<form action="{{ html.availability_action }}" id="availability_search_form" method="post">
		<p><label for="arrival_date">Arrival</label>
		<input class="datefield" id="arrival_date" name="rate_search_container[arrival_date]" type="text" value="{{ arrival_date }}" />
		<img alt="Calendar" id="day_calendar" src="/skin/images/calendar.gif" />
		<script type="text/javascript">Calendar.setup({inputField: "arrival_date", ifFormat: "%d.%m.%Y", button: "day_calendar"});</script>
		</p>
		
		<p>
		<label for="reservation_search_nights">Nights</label>
		<select name="nights" id="reservation_search_nights" class="nights">
		{% for i in (1..7) -%}
			<option value="{{i}}"{% if nights == i -%} selected="selected"{% endif -%}>{{i}}</option>
		{% endfor -%}
		</select>
		</p>
	 
