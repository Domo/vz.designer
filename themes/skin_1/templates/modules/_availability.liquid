{% if rate.is_available -%}

{{ rate.image_tag }}

{% if rate.is_ticket_rate %}
	{% for ticket in rate.tickets %}
		Event: {{ ticket.event_name }}<br/>
		Description: {{ ticket.event_description }}<br/>
		Ticket type: {{ ticket.ticket_type }}<br/>				
		
		{{ ticket.image_tag }}<br/>
		{{ ticket.image_tags }}<br/>
		
	{% endfor %}
{% endif %}

	<table class="available">
		<thead>
		<tr>
			<th class="ratename"><img src="{{ "images/info.png" | common_asset }}" style="margin-right: 5px;float:left;cursor:pointer;" title="Click for Rate Description" onclick="Modalbox.show('<span>{{ rate.description | with_new_lines | ready_for_javascript }}</span>', {title: '{{ rate.name }}', width: 600});"><span style="float:left;">{{ rate.name }}</span></th>
			{% for day in rate_search_drop.days -%}
				<th scope="col">{{ day | date: "%d %b" }}<br />{{ day | date: "%a" }}</th>
			{% endfor -%}				
			<th scope="col">Total</th>
			<td class="none"></td>
		</tr>
		</thead>	
	
		{% for room_type in rate.room_types -%}	
		<tr>
			<th scope="row" class="roomtype"><a href="#" onclick="toggle_room('{{ room_type.id }}'); return false;" id="room_{{ room_type.id }}">{{ room_type.name }}</a></th>
			{% for day in room_type.days -%}
				<td class="{{ day.available_class }}" >
					{% if day.is_available %}&euro;{{ day.price_for_day | format_decimal }}{% endif %}
				</td>
			{% endfor -%}
			<td class="total">{{ room_type.room_price_for_period | format_decimal }}</td>
			<td class="none">
				{% if room_type.is_available_for_period -%}
					<a href="{{ room_type.liquid_book_link_params }}" class="book"><span class="alt">Book</span></a>
				{% else -%}
					n/a
				{% endif -%}
			</td>
		</tr>
		<tr id="{{ room_type.id }}" style="display:none">
			<td colspan="9" class="room-desc">
				{{ room_type.image_link }}
				{{ room_type.long_description }}
			</td>
			<td class="none"></td>
		</tr>
		{% endfor -%}
	</table>
{% endif -%}
